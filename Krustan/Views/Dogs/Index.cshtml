@model IEnumerable<Dog>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Info != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success:</strong> @ViewBag.Info
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="Search" asp-controller="Dogs" method="get">
            <div class="input-group">
                <input class="form-control" type="search" placeholder="Search..."
                        style="padding:5px;"
                        name="byName">
                <span class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
<br />
<div style="display:flex;flex-flow:row wrap">
    @foreach (var dog in Model)
    {
        <div class="card" style="width: 22rem;margin:7px;">
            <img class="card-img-top" 
                 style="align-items:center;justify-content:center;width:100%;" 
                 src="@dog.DogPicture" alt="@dog.Name">
            <div class="card-body">
                <div align="center">
                    <h3 class="card-title">@dog.Name | @dog.Age</h3>
                    <p class="card-text">@dog.Description</p>
                    <p>
                        <span>Sex: @dog.Sex</span> |
                        <span>Weight: @dog.Weight</span> |
                        <span>Height: @dog.Height</span>
                    </p>
                </div>
            </div>
        </div>
    }
</div>